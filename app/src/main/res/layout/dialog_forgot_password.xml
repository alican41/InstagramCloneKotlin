<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background"> <!-- Özel bir arka plan kullanacağız -->

    <!-- Başlık -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Şifremi Unuttum"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <!-- Açıklama Metni -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter password reset email!"
        android:textSize="22sp"
        android:textColor="#555555"
        android:layout_marginBottom="20dp"/>

    <!-- E-posta Girişi -->
    <EditText
        android:id="@+id/editTextResetEmailDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-posta Adresi"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:layout_marginBottom="24dp"
        android:textColorHint="#999999"
        android:background="@drawable/rounded_edittext_bg"
        android:drawableStart="@drawable/baseline_email_24"
        android:drawablePadding="12dp"/>

    <!-- Sıfırlama Butonu -->
    <Button
        android:id="@+id/buttonResetSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Reset Email"
        android:textColor="@android:color/white"
        android:background="@drawable/button_primary_bg"
        android:paddingVertical="12dp"
        android:textStyle="bold"
        android:stateListAnimator="@null"/>

</LinearLayout>
